<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neteye.xinzhizhu.dao.ApiHelpIssueMapper">

    <resultMap type="com.neteye.xinzhizhu.entity.HelpIssueVo" id="helpIssueMap">
        <result property="id" column="id"/>
        <result property="typeId" column="type_id"/>
        <result property="question" column="question"/>
        <result property="answer" column="answer"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <select id="queryObject" resultType="com.neteye.xinzhizhu.entity.HelpIssueVo">
		select
			`id`,
			`type_id`,
			`question`,
			`answer`,
			`sort`
		from sys_help_issue
		where id = #{id}
	</select>

    <select id="queryList" resultType="com.neteye.xinzhizhu.entity.HelpIssueVo">
        select
        `id`,
        `type_id`,
        `question`,
        `answer`,
        `sort`
        from sys_help_issue
        <where>
	        <if test="type_id != null and type_id != ''">
	            AND type_id = #{type_id}
	        </if>
	        <choose>
	            <when test="sidx != null and sidx.trim() != ''">
	                order by ${sidx} ${order}
	            </when>
	            <otherwise>
	                order by sort asc
	            </otherwise>
	        </choose>
	        <if test="offset != null and limit != null">
	            limit #{offset}, #{limit}
	        </if>
        </where>
    </select>

    <select id="queryTotal" resultType="int">
        select count(*) from sys_help_issue
        <where>
	        <if test="name != null and name.trim() != ''">
	            AND name LIKE concat('%',#{name},'%')
	        </if>
        </where>
    </select>
</mapper>